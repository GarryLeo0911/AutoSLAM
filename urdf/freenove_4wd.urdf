<?xml version="1.0"?>
<robot name="freenove_4wd" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Simple footprint and base link with sensor frames -->
  <link name="base_footprint"/>

  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.03"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.20 0.14 0.05"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Ultrasonic frame placed at the front -->
  <link name="ultrasonic"/>
  <joint name="base_to_ultrasonic" type="fixed">
    <parent link="base_link"/>
    <child link="ultrasonic"/>
    <origin xyz="0.10 0.0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Camera frame -->
  <link name="camera"/>
  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera"/>
    <origin xyz="0.08 0.0 0.08" rpy="0 0 0"/>
  </joint>

</robot>

